import("../../lib/aoc.vil");

fn main(args) {
  var lines = fs.get_lines("./data");
  var total_box = 0;

  each (var _, var v : lines) {
    if (!#v) skip;

    var dims = str.spl(v, "x");

    var l = $dims[0];
    var w = $dims[1];
    var h = $dims[2];

    total_box += box(l, w, h);
  }

  io.println("area: " + @total_box + " sqft");
}

fn box(l, w, h) {
  var sides = { l*w, w*h, h*l };
  var slack = aoc.min(sides);

  ret (2*sides[0] + 2*sides[1] + 2*sides[2]) + slack;
}
